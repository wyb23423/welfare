@import "/template/list_item/list_item.wxss";

.search_box {
    width: 50%;
    border: 2rpx solid #ccc;
    justify-content: flex-start;
    margin-left: 100%;
    transform: translateX(-100%);
    padding: 0 10rpx;
}

.search_input {
    flex-grow: 1;
    margin-left: 10rpx;
}

.item {
    border-top: 2rpx solid #ccc;
    margin-top: 10rpx;
}

.more {
    font-size: 32rpx;
    font-weight: 700;
    height: 100rpx;
    text-align: right;
    line-height: 100rpx;
}