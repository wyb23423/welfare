.popup {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 9;
    background: rgba(0, 0, 0, 0.6);
    padding: 10% 5%;
    box-sizing: border-box;
}

.popup-container {
    background-color: #fff;
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    box-sizing: bordre-box;
    padding: 20rpx;
}

.popup-title {
    display: flex;
    justify-content: space-between;
    font-size: 36rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #ccc;
}

.popup-con {
    padding: 20rpx 0;
}
