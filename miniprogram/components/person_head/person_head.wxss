@import '/public/css/iconfont.wxss';

.avator {
    border-radius: 50%;
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
}

.name {
    font-size: 36rpx;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}

.info {
    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx 40rpx;
    border-bottom: 6rpx solid #ccc;
}

.point {
    position: absolute;
    top: 50%;
    right: 50rpx;
    transform: translateY(-50%);
}

.btn {
    text-decoration: underline;
    font-weight: 400;
    font-size: 28rpx;
    color: #07c160;
    margin-left: 40rpx;
}