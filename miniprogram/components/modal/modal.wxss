.popup {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 9;
    background: rgba(0, 0, 0, 0.6);
    box-sizing: border-box;
}

.popup-container {
    background-color: #fff;
    box-sizing: bordre-box;
    position: absolute;
    bottom: 0;
    width: 100%;
    overflow: hidden;
}

.popup-title {
    display: flex;
    justify-content: space-between;
    font-size: 36rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #ccc;
    padding: 0 20rpx;
}

.popup-con {
    padding: 20rpx;
    max-height: 80vh;
    overflow-y: auto;
}
