<!-- index.wxml -->
<import src="/template/list_item/list_item.wxml"></import>
<view>
  <view class="main">
    <view class="title">
      <text class="title_text">公益活动</text>
      <navigator class="title_more">更多公益></navigator>
    </view>
    <navigator wx:for="{{activity}}" wx:key="{{item.id}}" hover-class="none">
      <template is="activity_item" data="{{...item}}"></template>
    </navigator>
  </view>
  <view class="main">
    <view class="title">
      <text class="title_text">积分兑换</text>
      <navigator class="title_more">更多商品></navigator>
    </view>
    <navigator wx:for="{{goods}}" wx:key="{{item.id}}" hover-class="none">
      <template is="goods_item" data="{{...item}}"></template>
    </navigator>
  </view>
</view>