<!-- 待参加 -->
<template name="await">
	<view class="flex-container" style="width: 100%">
		<text style="font-size: 24rpx">{{sign}}/{{size}}</text>
		<text class="item_text item_info">仅剩{{size - sign}}名额</text>
		<text class="item_text item_info" style="border-radius: 10rpx">等待参加</text>
	</view>
</template>
<!-- 待审核 -->
<template name="auditing">
	<view class="flex-container" style="width: 100%">
		<text style="font-size: 24rpx">{{sign}}/{{size}}</text>
		<text class="item_text item_info">仅剩{{size - sign}}名额</text>
		<text class="item_text item_info" style="border-radius: 10rpx">等待审核</text>
	</view>
</template>
<!-- 已参加 -->
<template name="complete">
	<view style="text-align: right; width: 100%">
		<button
		 class="iconfont icon-delete"
		 hover-class="btn-tap"
		 hover-stop-propagation="true"
		 data-index="{{index}}"
		 catch:tap="delete"
		/>
	</view>
</template>
<!-- 待评价 -->
<template name="evaluate">
	<view class="evaluate_box flex-container">
		<navigator
		 class="iconfont icon-pingjia"
		 hover-class="btn-tap"
		 hover-stop-propagation="true"
		 url="/pages/comment/comment?id={{id}}&name={{name}}&authentication={{authentication}}&img={{originImg}}"
		 catch:tap="none"
		/>
		<button
		 class="iconfont icon-delete"
		 hover-class="btn-tap"
		 hover-stop-propagation="true"
		 data-index="{{index}}"
		 catch:tap="delete"
		/>
	</view>
</template>
<!-- 我的发起 -->
<template name="initiate">
	<view class="ok" wx:if="{{status === 2}}">
		<button
		 class="iconfont icon-delete"
		 hover-class="btn-tap"
		 hover-stop-propagation="true"
		 data-index="{{index}}"
		 catch:tap="delete"
		/>
	</view>
	<view style="width: 95%; text-align: right" wx:elif="{{status === 0}}">
		<text
			class="item_text item_info"
			data-index="{{index}}"
			style="border-radius: 10rpx; margin-right: 20rpx"
			catch:tap="openEnList"
		>报名审核</text>
		<text
		class="item_text item_info"
		data-index="{{index}}"
		style="border-radius: 10rpx"
		catch:tap="ok"
		decode="{{true}}"
		>&nbsp;完成&nbsp;</text>
	</view>
	<view class="ok" wx:else>
		<text class="item_text item_info">{{status === 1 ? '进行中' : '意外中止'}}</text>
	</view>
</template>
<!-- 我的收藏 -->
<template name="collection">
	<template is="complete" data="{{index}}" />
</template>
