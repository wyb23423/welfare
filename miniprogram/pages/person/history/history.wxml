<!-- history -->
<view style="padding: 10rpx">
    <navigator class="flex-container item_box" wx:for="{{history}}" wx:key="{{item.id}}" url="/pages/activity/details/details?id={{item.id}}">
        <image src="{{item.img}}" lazy-load="true" mode="aspectFill" style="max-height: 100%"></image>
        <view style="height: 100%; padding-left: 10rpx">
            <view class="list_item_title">{{item.title}}</view>
            <view class="item_text authentication">{{item.authentication}}</view>
            <template is="{{type}}" data="{{...item}}"></template>
        </view>
    </navigator>
</view>