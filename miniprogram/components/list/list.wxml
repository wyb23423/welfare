<import src="/template/list_item/list_item.wxml" />
<view>
	<view class="flex-container title" wx:if="{{!isGoods}}">
        <text style="font-weight: 700; font-size: 36rpx; flex-shrink: 0;">活动列表</text>
        <view class="flex-container search_box">
            <text class="iconfont icon-sousuo"/>
            <input
                value=""
                placeholder="搜索精彩活动"
                class="search_input"
                bind:confirm="search"
                confirm-type="search"
            />
        </view>
	</view>
    <view wx:else class="goods_list_title title">兑换商品列表</view>
    <navigator
        wx:for="{{list}}"
        wx:key="{{item.id}}"
        hover-class="none"
        url="/pages/details/details?id={{item.id}}&isGoods={{isGoods}}"
    >
        <template is="{{isGoods ? 'goods' : 'activity'}}_item" data="{{...item}}" />
    </navigator>
    <view class="more"><text wx:if="{{!hasMore}}">暂无更多</text></view>
</view>

