/**app.wxss**/
@import '/public/css/iconfont.wxss';

.flex-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.flex-center-v {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ellipsis {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.btn-tap {
  transform: scale(1.2);
}

page {
  font-size: 24rpx;
  padding: 15rpx 0 0;
}

button::after {
  border: 0;
}
button {
  line-height: normal;
  border-radius: 0;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty:after {
  content: '暂无数据';
  display: block;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}