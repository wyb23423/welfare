<view>
    <image src="{{img}}" mode="aspectFill" style="width: 100%; height: 600rpx" />
    <view class="details">
        <view style="font-weight: 700">{{name}}</view>
        <view style="line-height: 80rpx">
            <text decode="true">粉丝&nbsp;{{fans}}&nbsp;&nbsp;&nbsp;活动&nbsp;{{activityCount}}</text>
        </view>
        <view class="details_item">
            <text class="iconfont icon-83"></text>
            <text>{{address}}</text>
        </view>
        <view class="details_item">
            <text class="iconfont icon-shouji"></text>
            <text>{{phone}}</text>
        </view>
    </view>
    <view class="user">{{detail}}</view>
    <button class="bottom collect" bind:tap="collect" wx:if="{{!disabled}}">
        <text class="iconfont icon-heart{{isCollected ? '-solid' : ''}}"></text>
        <text>收藏</text>
    </button>
</view>