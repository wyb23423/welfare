<!-- history -->
<view style="padding: 10rpx">
	<view class="tab" wx:if="{{type==='collection'}}" bind:tap="switch">
		<view class="{{tabType ? '' : 'active'}}" data-type="0">活动</view>
		<view class="{{tabType ? 'active' : ''}}" data-type="1">商品</view>
	</view>
	<navigator
	 class="flex-container item_box"
	 wx:for="{{history}}"
	 wx:key="{{item.id}}"
	 url="/pages/details/details?id={{item.id}}&isGoods={{tabType}}"
	>
		<image
		 src="{{item.img}}"
		 lazy-load="true"
		 mode="aspectFill"
		 style="max-height: 100%; width: 50%"
		/>
		<view class="info_box">
			<view class="list_item_title">{{item.name}}</view>
			<view class="item_text authentication">{{item.authentication}}</view>
			<template is="{{type}}" data="{{...item}}" />
		</view>
	</navigator>
	<en-list id="en-list" />
</view>

