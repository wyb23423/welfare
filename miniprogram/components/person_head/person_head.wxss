@import '/app.wxss';

.avator {
    border-radius: 50%;
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
}

.index {
    position: absolute;
    top: 20rpx;
    left: 60rpx;
    transform: translateY(-50%);
    text-align: center;
}
.index .avator {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 20rpx;
}
.button {
    position: absolute;
    right: 30rpx;
    top: 20rpx;
    border-radius: 30rpx;
    border: 2rpx solid #07c160;
    color: #07c160;
    padding: 10rpx 20rpx;
}
.info_index {
    padding: 160rpx 40rpx 40rpx;
    justify-content: space-around;
    display: flex;
    align-items: center;
    text-align: center;
    border-bottom: 2rpx solid #f5f5f5;
}
.info_value {
    font-size: 32rpx;
}
.info_name {
    color: #cac7c7;
    margin-top: 10rpx;
}
.divider {
    width: 1px;
    background: #f5f5f5;
    height: 50rpx;
}

.name {
    font-size: 36rpx;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}

.info {
    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx 40rpx;
    border-bottom: 6rpx solid #ccc;
}

.point {
    position: absolute;
    top: 50%;
    right: 50rpx;
    transform: translateY(-50%);
}

.btn {
    text-decoration: underline;
    font-weight: 400;
    font-size: 28rpx;
    color: #07c160;
    margin-left: 40rpx;
}