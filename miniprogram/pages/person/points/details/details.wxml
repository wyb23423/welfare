<view>
    <view wx:for="{{list}}" class="flex-container">
        <text style="font-size: 32rpx">{{item.title}}</text>
        <text>{{item.time}}</text>
        <view style="color: {{item.value > 0 ? '#009688' : '#e00'}}">
            {{item.value > 0 ? '+' : ''}}{{item.value}}
        </view>
    </view>
</view>