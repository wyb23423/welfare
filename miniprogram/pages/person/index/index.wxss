@import '/pages/details/details.wxss';

.bg {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    filter: brightness(80%);
}

.main {
    border-radius: 30rpx 30rpx 0 0;
    position: relative;
    z-index: 1;
    background: #fff;
    min-height: 77vh;
}

.menu {
    position: relative;
    font-size: 28rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
}

.right {
    position: absolute;
    right: 20rpx;
}

.ad {
    height: 120rpx;
    margin-top: 10rpx;
}

.iconfont {
    font-weight: normal !important;
    font-size: 32rpx !important;
}

.icon-jiantou {
    font-size: 24rpx !important;
}

.details_item {
    border-width: 2rpx;
    border-color: #f5f5f5;
}

.red_point {
    position: absolute;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color: #e00;
    top: 16rpx;
    left: 14rpx;
}

.tab_item {
    padding: 0 20rpx;
}

.title {
    font-size: 38rpx;
    margin: 50rpx 0 10rpx;
    padding-left: 20rpx;
    border-left: 8rpx solid #07c160;
}