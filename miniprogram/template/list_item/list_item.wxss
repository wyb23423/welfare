.list_item_title {
    font-weight: 700;
    font-size: 28rpx;
}

.authentication {
    color: rgb(255, 152, 0);
    background-color: rgba(255, 152, 0, 0.49);
    border-color: rgb(255, 152, 0);
}

.item_text {
    font-size: 24rpx;
    padding: 4rpx 8rpx;
    border-width: 2rpx;
    border-style: solid;
}

.item_info {
    color: #009688;
    border-color: #009688;
}

.item_intro {
    flex-direction: column;
    width: 55%;
    flex-shrink: 0;
    align-items: flex-start;
    height: 100%;
    padding-left: 20rpx;
}

.item_box {
    height: 220rpx;
    padding-top: 15rpx;
}

.heart {
    color: #e00;
    font-size: 48rpx;
    margin: 0;
    background: none;
}