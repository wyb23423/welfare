@import '/app.wxss';

.details {
    padding: 20rpx;
    font-size: 28rpx;
}

.details_item {
    border-bottom: 4rpx solid #ccc;
    line-height: 70rpx;
    font-weight: 500;
}

.details_item .iconfont {
    margin-right: 15rpx;
    font-weight: 700;
    font-size: 36rpx;
}

.user {
    border-bottom: none !important;
    border-top: 8rpx solid #ccc;
    padding: 10rpx 0 120rpx;
}

.bottom {
    height: 110rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    align-items: stretch;
    border-top: 2rpx solid #ccc;
}

.bottom button, .bottom navigator {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 20%;
    border-right: 2rpx solid #ccc;
    border-radius: 0;
    line-height: normal;
    font-size: 24rpx;
    background: #fff;
}

.submit {
    flex-grow: 1;
    font-size: 28rpx;
    background: #07c160 !important;
    color: #fff;
}
