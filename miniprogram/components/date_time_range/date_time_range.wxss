::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}  

.input {
    height: 45rpx;
    line-height: 45rpx;
}

.picker-box {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 9;
    background: rgba(0, 0, 0, 0.6);
}

.picker {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 724rpx;
    background: #fff;
    transform-origin: center bottom;
    animation: bttDrawer 300ms ease-out;
}

@keyframes bttDrawer {
    0% {
        transform: scaleY(0);
    }
    100% {
        transform: scaleY(1)
    }
}

.head {
    padding: 10rpx 20rpx;
    border-bottom: 2rpx solid #eee;
}

.btn-text {
    font-size: 32rpx;
    cursor: pointer;
}

.flex-center {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.ellipsis {
    overflow: hidden;
	text-overflow: ellipsis;
    white-space: nowrap;
    width: 50%;
    flex-shrink: 1;
}

.scroll-item {
    height: 580rpx;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    text-align: center;
}

.option {
    color: #999;
    height: 32px;
    line-height: 32px;
}

.selected {
    color: #000;
    font-size: 28rpx;
}

.selected-bar {
    border-width: 2rpx 0;
    border-style: solid;
    border-color: #eee;
    position: absolute;
    top: 238rpx;
    left: 0;
    width: 100%;
    height: 32px;
}
