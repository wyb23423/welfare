@import '/template/list_item/list_item.wxss';

.authentication {
    display: inline-block;
    margin: 15rpx 0;
}

.item_box {
    border-top: 1px solid #ccc;
    padding: 10rpx 0;
    position: relative;
}

.iconfont {
    font-size: 40rpx;
    background: none;
}
.icon-delete {
    color: #e00;
    display: inline-block;
    margin: 0;
}
.btn-tap {
    transform: scale(1.2);
}

.evaluate_box {
    justify-content: flex-end;
}
.evaluate_box .icon-pingjia {
    color: rgb(0, 150, 136);
    font-size: 48rpx;
}

.icon {
    position: absolute;
    right: 40rpx;
    top: 30rpx;
    opacity: 0.6;
}
