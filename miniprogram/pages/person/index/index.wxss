@import '/pages/details/details.wxss';

.menu {
    position: relative;
    font-size: 36rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
}

.right {
    position: absolute;
    right: 20rpx;
}

.history {
    align-items: stretch;
    line-height: normal;
    font-size: 24rpx;
    padding: 0 80rpx;
    height: 140rpx;
}

.history .iconfont {
    margin: 0;
    margin-bottom: 10rpx;
}
.ad {
    height: 120rpx;
    margin-top: 10rpx;
}

.icon-jiantou {
    font-weight: normal !important;
    font-size: 24rpx !important;
}

.details_item {
    border-width: 2rpx;
    border-color: #f5f5f5;
}

.red_point {
    position: absolute;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color: #e00;
    top: 16rpx;
    left: 14rpx;
}

.tab_item {
    padding: 0 20rpx;
}

.title {
    font-size: 38rpx;
    margin: 50rpx 0 10rpx;
    padding-left: 20rpx;
    border-left: 8rpx solid #07c160;
}