@import '/template/list_item/list_item.wxss';

.authentication {
    display: inline-block;
    margin: 15rpx 0;
}

.item_box {
    border-top: 2rpx solid #ccc;
    padding: 10rpx 0;
    position: relative;
}

.iconfont {
    font-size: 40rpx;
    background: none;
}
.icon-delete {
    color: #e00;
    display: inline-block;
    margin: 0;
}

.evaluate_box {
    justify-content: flex-end;
}
.evaluate_box .icon-pingjia {
    color: rgb(0, 150, 136);
    font-size: 48rpx;
}

.icon {
    position: absolute;
    right: 40rpx;
    top: 30rpx;
    opacity: 0.6;
}

.info_box {
    display: flex;
    height: 100%;
    padding-left: 10rpx;
    width: 50%;
    align-items: flex-start;
    justify-content: space-between;
    flex-direction: column;
}

.tab {
    display: flex;
    font-size: 32rpx;
    font-weight: 700;
    border-bottom: 2rpx solid #ccc;
}
.tab > view {
    width: 50%;
    text-align: center;
    border-width: 2rpx;
}
.active {
    color: #409eff;
}
.tab + .item_box {
    border-top: none;
}